<Window x:Class="ResolverTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResolverTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="MainWindow_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>    
        
        <Canvas x:Name="Canvas" Grid.Row="0" SizeChanged="Canvas_OnSizeChanged" />
        <TextBox x:Name="Input" Grid.Row="1" TextChanged="Input_OnTextChanged"/>
    </Grid>
</Window>
